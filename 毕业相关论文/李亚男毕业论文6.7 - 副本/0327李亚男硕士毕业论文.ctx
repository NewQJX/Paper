\subsection{\XIAOJIEZI\zihao{-4}\!\!\!梯形模糊需求分布下的绝对半偏差} 
\label{pg:3.4.2} \hskip\parindent 
对于梯形模糊需求分布,有如下相关结论：
\begin{theorem}\label{theorem3-4}
若需求 $\xi$ 是梯形模糊变量 $(r_{1},r_{2},r_{3},r_{4})$,$r_{1}> 0$ 且 $m=\E[1/\xi]$,则绝对半偏差 $\E\Big[\big(\frac{1}{\xi}-m\big)^{+}\Big]$ 等价于
\begin{align}\label{equation3-23}
\E\left[(\frac{1}{\xi}-m)^{+}\right]=&\nonumber
\begin{cases}
\frac{1}{2(r_{4}-r_{3})}\ln \frac{1}{r_{3}m}+\frac{1}{2(r_{2}-r_{1})}\ln \frac{r_{2}}{r_{1}}+\frac{m(2r_{3}-r_{4})-1}{2(r_{4}-r_{3})},& \frac{1}{r_{4}}\leq m<\frac{1}{r_{3}}\\
\frac{1}{2(r_{2}-r_{1})}\ln \frac{r_{2}}{r_{1}}-\frac{m}{2},& \frac{1}{r_{3}}\leq m<\frac{1}{r_{2}}\\
\frac{1}{2(r_{2}-r_{1})}\ln \frac{1}{r_{1}m}+\frac{mr_{1}-1}{2(r_{2}-r_{1})},& \frac{1}{r_{2}}\leq m<\frac{1}{r_{1}}.
\end{cases}
\end{align}
当 $r_{1}= 0$ 时,绝对半偏差 $\E\left[(\frac{1}{\xi}-m)^{+}\right]$ 不存在.
\\\em \pf
若记 $\eta=1/\xi$,则 $\eta$ 的可能性分布为
\[
\mu{_\eta}(t)=\Pos\{{\eta=t}\}=\Pos\left\{{\xi=\frac{1}{t}}\right\}=\mu{_{\xi}}\left(\frac{1}{t}\right).
\]

根据 $\xi$ 的分布,有
\begin{eqnarray*}
\qquad &\mu{_\eta}(t)=\left\{
\begin{aligned}
&\frac{r_{4}t-1}{(r_{4}-r_{3})t}, &&\frac{1}{r_{4}}< t\leq\frac{1}{r_{3}}\\
&1,&& \frac{1}{r_{3}}<t\leq\frac{1}{r_{2}}\\
&\frac{1-r_{1}t}{(r_{2}-r_{1})t}, &&\frac{1}{r_{2}}< t\leq\frac{1}{r_{1}}\\
&0,&& \mbox{其他}.
\end{aligned}
\right.
\end{eqnarray*}

对于任意的 $r> 0$,$\eta$ 的可信性分布为
\begin{eqnarray*}\label{Formulation 6}
\qquad &\Cr\{\eta \leq r\}=\left\{
\begin{aligned}
&0, && 0<r<\frac{1}{r_{4}}\\
&\frac{r_{4}-\frac{1}{r}}{2(r_{4}-r_{3})},&& \frac{1}{r_{4}}\leq r<\frac{1}{r_{3}}\\
&\frac{1}{2}, &&\frac{1}{r_{3}}\leq r<\frac{1}{r_{2}}\\
&\frac{2r_{2}-r_{1}-\frac{1}{r}}{2(r_{2}-r_{1})}, &&\frac{1}{r_{2}}\leq r<\frac{1}{r_{1}}\\
&1, && r\geq\frac{1}{r_{1}}.
\end{aligned}
\right.
\end{eqnarray*}

由于 $m=\frac{1}{2(r_{4}-r_{3})}\ln{\frac{r_{4}}{r_{3}}}+\frac{1}{2(r_{2}-r_{1})}\ln{\frac{r_{2}}{r_{1}}}$ 已在第二章中计算得出, 当 $m\in[\frac{1}{r_{4}},\frac{1}{r_{3}})$ 时,
$(\eta-m)^{+}$ 的期望值如下:
\[
\begin{split}
\E[(\eta-m)^{+}]&=\int_{(m,+\infty)}(r-m)\d\Cr\{\eta \leq r\}\\
&=\int_{(m,\frac{1}{r_{3}})}(r-m)\d\frac{r_{4}-\frac{1}{r}}{2(r_{4}-r_{3})}+\int_{(\frac{1}{r_{3}},\frac{1}{r_{2}})}(r-m)\d\frac{1}{2}\\
&+\int_{(\frac{1}{r_{2}},\frac{1}{r_{1}})}(r-m)\d\frac{2r_{2}-r_{1}-\frac{1}{r}}{2(r_{2}-r_{1})}+\int_{(\frac{1}{r_{1}},+\infty)}(r-m)\d1\\
&=\frac{1}{2(r_{4}-r_{3})}\ln \frac{1}{r_{3}m}+\frac{1}{2(r_{2}-r_{1})}\ln \frac{r_{2}}{r_{1}}+\frac{m(2r_{3}-r_{4})-1}{2(r_{4}-r_{3})}.
\end{split}
\]

类似地,当 $m\in[\frac{1}{r_{3}},\frac{1}{r_{2}})$ 时,有
\[
\E[(\eta-m)^{+}]=\frac{1}{2(r_{2}-r_{1})}\ln \frac{r_{2}}{r_{1}}-\frac{m}{2}.
\]

当 $m\in[\frac{1}{r_{2}},\frac{1}{r_{1}}]$ 时,有
\[
\E[(\eta-m)^{+}]=\frac{1}{2(r_{2}-r_{1})}\ln \frac{1}{r_{1}m}+\frac{mr_{1}-1}{2(r_{2}-r_{1})}.
\]

接下来,证明当 $r_{1}=0$ 时,绝对半偏差 $\E[(\eta-m)^{+}]$ 不存在.

事实上,在 $r_{1}=0$ 的情况下,$\eta$ 的可信性分布为
\begin{eqnarray*}\label{Formulation 7}
\qquad &\Cr\{\eta \geq r\}=\left\{
\begin{aligned}
&1, &&0<r<\frac{1}{r_{4}}\\
&\frac{(r_{4}-2r_{3})r+1}{2r(r_{4}-r_{3})}, &&\frac{1}{r_{4}}\leq r<\frac{1}{r_{3}}\\
&\frac{1}{2}, && \frac{1}{r_{3}}\leq r<\frac{1}{r_{2}}\\
&\frac{1}{2r_{2}r}, && r\geq \frac{1}{r_{2}}.
\end{aligned}
\right.
\end{eqnarray*}

因此,期望值 $m$ 可计算得出为
\[
\begin{split}
\qquad m&=\int_{0}^{+\infty}\Cr\{\eta \geq r\}\dr-\int_{-\infty}^{0}\Cr\{\eta \leq r\}\dr\\
\qquad &=\int_{0}^{+\infty}\Cr\{\eta \geq r\}\dr\\
\qquad &=\int_{0}^{\frac{1}{r_{4}}}\dr+\int_{\frac{1}{r_{4}}}^{\frac{1}{r_{3}}}\frac{(r_{4}-2r_{3})r+1}{2r(r_{4}-r_{3})}\dr
+\int_{\frac{1}{r_{3}}}^{\frac{1}{r_{2}}}\frac{1}{2}\dr+\lim_{d\rightarrow+\infty}\int_{\frac{1}{r_{2}}}^{d}\frac{1}{2r_{2}r}\dr\\
\qquad
&=\frac{1}{2(r_{4}-r_{3})}\ln{\frac{r_{4}}{r_{3}}}+\frac{1}{2r_{2}}(1+\lim_{d\rightarrow+\infty}\ln{dr_{2}}),
\end{split}
\]
可知期望值 $m$ 不存在,所以绝对半偏差 $\E[(\eta-m)^{+}]$ 也不存在.定理证明完毕.
\pfd
\end{theorem}
